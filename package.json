{
  "name": "appointment-api",
  "version": "0.1.0",
  "private": true,
  "description": "Backend de agendamiento (NestJS + Lambda + DynamoDB)",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "deploy": "serverless deploy",
    "offline": "serverless offline",
    "offline:dynamo": "powershell -Command \"$env:DYNAMODB_ENDPOINT='http://localhost:8000'; $env:AWS_REGION='us-east-1'; serverless offline\"",
    "test": "jest --passWithNoTests",
    "test:int:dynamo": "powershell -Command \"$env:DYNAMODB_ENDPOINT='http://localhost:8000'; $env:AWS_REGION='us-east-1'; jest --testPathPattern=dynamodb-appointment.repository.int.spec.ts\"",
    "dynamo:ls": "node ./scripts/dynamo-tools.js ls",
    "dynamo:ensure": "node ./scripts/dynamo-tools.js ensure",
  "localstack:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/localstack-setup.ps1",
  "localstack:recreate": "powershell -ExecutionPolicy Bypass -File ./scripts/localstack-recreate.ps1",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts' --max-warnings=0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
  "@aws-sdk/client-sns": "^3.633.0",
    "@aws-sdk/client-secrets-manager": "^3.633.0",
    "@aws-sdk/client-dynamodb": "^3.633.0",
    "@aws-sdk/credential-providers": "^3.873.0",
    "@aws-sdk/lib-dynamodb": "^3.633.0",
    "@fastify/static": "^7.0.0",
    "@fastify/view": "^8.2.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/swagger": "^7.1.21",
    "mysql2": "^3.9.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "serverless": "^3.39.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.3.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "main": "jest.config.js",
  "directories": {
    "test": "test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
